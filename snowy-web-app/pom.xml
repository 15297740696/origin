    </parent>

    <artifactId>snowy-web-app</artifactId>
    <packaging>jar</packaging>
    <description>主启动模块</description>

    <properties>
        <jnuit.version>4.13.2</jnuit.version>
        <lombok.versin>1.18.22</lombok.versin>
